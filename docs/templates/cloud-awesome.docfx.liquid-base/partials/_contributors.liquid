{% if authors.size > 0 %}
    <hr/>
    <h3>{{ __global.contributors }}</h3>
    <div>
        <ul class="cross-ref-list">
            {% for author in authors %}
                {% if Contributors[author.name] %}
                    <li>
                        <a href="{{ Contributors[author.name] }}">{{ author.name }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{%  endif %}