{
  "$schema": "https://dotnet.github.io/docfx/schemas/v1.0/schema.json#",
  "version": "1.0.0",
  "id": "https://github.com/dotnet/docfx/schemas/personalist.schema.json",
  "rawTitle": "PersonaList",
  "description": "The schema for persona list page",
  "type": "object",
  "xrefProperties": [ "title", "description" ],
  "properties": {
    "metadata": {
      "type": "object",
      "tags": [ "metadata" ]
    },
    "leadParagraph": {
      "type": "string",
      "contentType": "markdown"
    },
    "content": {
      "type": "string",
      "contentType": "markdown"
    },
    "uid": {
      "type": "string",
      "contentType": "uid"
    },
    "personas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "mergeType": "key"
          },
          "href": {
            "type": "string",
            "contentType": "href"
          },
          "image": {
            "type": "string"
          }
        }
      }
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    "title": {
      "type": "string"
    }
  }
}